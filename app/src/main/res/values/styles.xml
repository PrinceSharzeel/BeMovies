<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme_Dark_Dialog"></style>

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">#000000</item>
        <item name="android:bottomDark">#000000</item>
        <item name="android:bottomMedium">#000000</item>
        <item name="android:centerBright">#000000</item>
        <item name="android:centerDark">#000000</item>
        <item name="android:centerMedium">#000000</item>
        <item name="android:fullBright">#000000</item>
        <item name="android:fullDark">#000000</item>
        <item name="android:topBright">#000000</item>
        <item name="android:topDark">#000000</item>
    </style>



</resources>

